<!DOCTYPE html>
<html>
<head>
  <title>Signup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h3><%= flash[:notice] %></h3>
<% if signed_in? %>
  <h3>Current user: <%= current_user.inspect %></h3>

  <%= link_to 'Sign out', sign_out_path, method: :delete %>

<% else %>
  <p>Hi stranger! <%= link_to 'Sign in', new_session_path %></p>
<% end %>

<%= yield %>

</body>
</html>
